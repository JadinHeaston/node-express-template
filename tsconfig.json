{
	"compilerOptions": {
        "module": "CommonJS",
		"target": "ES6", //Defining what version of JavaScript to compile to. ("esnext") <-- The latest.
		"strict": true, //Defines how strict Typescript is about typing. (true)
		"strictNullChecks": false,
		"watch": false, //Recompiles the code every time the file is saved. (true)
		"lib": ["dom", "ES2017"], //Automatically include typing for certain environments. (["dom", "ES2017"])
		"baseUrl" : "/",
        "alwaysStrict" : true,
        "removeComments" : true,
		"moduleResolution": "Node",
		"esModuleInterop": true
	},
    "include": [
        "./**/*.ts",
		"backend/server.js", "backend/server.js"
	],
}